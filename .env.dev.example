# MCP Story Service - Development Environment Configuration
# Copy to .env and fill with real values for development

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8010
MCP_SERVER_NAME=story-service

# Redis Configuration (for session persistence)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
STORY_CACHE_TTL=300

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.75
GENRE_AUTHENTICITY_THRESHOLD=0.75
NARRATIVE_COHESION_MINIMUM=0.75

# Genre Configuration
GENRE_CONFIG_PATH=config/genres
PATTERNS_CONFIG_PATH=config/patterns

# Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8015
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Security
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:3010"]

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_GENRE_VALIDATION=true
ENABLE_CONSISTENCY_CHECKS=true

# External Service Integration
BRAIN_SERVICE_BASE_URL=http://localhost:8002
AUTO_MOVIE_BASE_URL=http://localhost:3010
