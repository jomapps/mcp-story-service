# MCP Story Service - Production Environment Configuration
# Copy to .env and fill with real values for production

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8010
MCP_SERVER_NAME=story-service

# Redis Configuration (for session persistence)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_DB=${REDIS_DB}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Performance Settings
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=30
STORY_CACHE_TTL=600

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.75
GENRE_AUTHENTICITY_THRESHOLD=0.75
NARRATIVE_COHESION_MINIMUM=0.75

# Genre Configuration
GENRE_CONFIG_PATH=config/genres
PATTERNS_CONFIG_PATH=config/patterns

# Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8015
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Security
SECRET_KEY=${SECRET_KEY}
CORS_ORIGINS=${CORS_ORIGINS}

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_GENRE_VALIDATION=true
ENABLE_CONSISTENCY_CHECKS=true

# External Service Integration
BRAIN_SERVICE_BASE_URL=https://brain.ft.tc
AUTO_MOVIE_BASE_URL=https://auto-movie.ft.tc
